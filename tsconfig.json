// Typescript must be "transpiled" into JavaScript using the tsc compiler
// This file specifies the tsc compiler options and typescript files needed to be compiled
// This file will be read when compiling ts files with commands such as "npx ts-node XXX.ts" and "tsc XXX.ts"
{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"] // all files and directories starting from the "src" directory
 }